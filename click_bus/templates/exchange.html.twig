{% extends "base.html.twig" %}
{% block title %}Titulo{% endblock %}
{% block javascripts %}
    <script src="{{asset('js/config.js')}}" type="text/javascript"></script>
    <script src="{{asset('js/convertir.js')}}" type="text/javascript"></script>
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-3 col-xl-3 col-sm-12 col-xs-12 align-self-center">
                <div class="card text-center">
                  <div class="card-body">
                    <h5 class="card-title">Formulario</h5>
                    {{ form(formulario) }}
                  </div>
                </div>
            </div>  
            <div class="col-md-12 col-lg-9 col-xl-9 col-sm-12 col-xs-12 align-self-center">
                <table class="table table-bordered table-striped" >
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">moneda</th>
                            <th scope="col">valor</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for coin in coins %}
                            <tr>
                                <th scope="row">{{coin}}</td>
                                <td id="{{coin}}"></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

